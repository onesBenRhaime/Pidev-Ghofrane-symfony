{% extends 'base.html.twig' %}
{% block body %}
	<!-- Contact -->
	<section class="contact py-5">
		<div class="container py-lg-5 py-sm-3">
			<h2 class="heading text-capitalize text-center mb-sm-5 mb-4">
				Add New Review</h2>


			<div class="contact-grids mt-5">
				<div class="row">
					<div class="col-lg-6 col-md-6 contact-left-form">
						<form action="{{ path('add_reclamation') }}" method="post">
							<div class="col-sm-14 form-group contact-forms">
								<select class="form-control" name="CibleReclamation">
									<option value="Complaint Target">Complaint Target</option>
									<option value="Customer Service Department">Customer Service Department</option>
									<option value="Reservation Manager or Department">Reservation Manager or Department</option>
									<option value="After-Sales Service Department">After-Sales Service Department</option>
									<option value="General Management or CEO">General Management or CEO</option>
								</select>
							</div>
							<div class="form-group contact-forms">
								<input type="email" class="form-control" name="email" placeholder="Email" required="">
							</div>
							<div class="form-group contact-forms">
								<input type="date" class="form-control" name="date" placeholder="Date" required="">
							</div>
							<div class="form-group contact-forms">
								<textarea class="form-control" name="message" placeholder="Message" rows="3" required=""></textarea>
							</div>
							<button type="submit" class="btn btn-block sent-butnn">Add</button>
						</form>
					</div>
					<div class="col-lg-6 col-md-6 contact-right pl-lg-5">
						<h4>Do you have any Complaints about us? write to us.</h4>
						<p class="mt-md-4 mt-2">Thank you for submitting your complaint. Your feedback is important to us. We will review your complaint and get back to you as soon as possible.</p>
						<h5 class="mt-lg-5 mt-3">Office Hours</h5>
						<p class="mt-3">Monday to Friday : 09 am to 06 pm</p>
						<p>Saturday and Sunay : 10 am to 04 pm</p>
					</div>
				</div>
			</div>

		</div>
	</section>
	<!-- //Contact -->
{% endblock %}
